<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="chipIconTint">@color/colorAccent</item>
    </style>


    <style name="BoldSmallTextView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
    </style>

    <style name="SmallTextView">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="RegularTextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="fontFamily">@font/source_sans_pro</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="BoldRegularTextView">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="MediumTextView">
        <item name="android:textSize">@dimen/_17ssp</item>
        <item name="fontFamily">@font/source_sans_pro</item>
    </style>

    <style name="HeadingTextView">
        <item name="android:textSize">@dimen/_20ssp</item>
        <item name="fontFamily">@font/source_sans_pro_semibold</item>
    </style>

    <style name="BoldHeadingTextView">
        <item name="android:textSize">@dimen/_25ssp</item>
        <item name="fontFamily">@font/source_sans_pro_bold</item>
    </style>

    <style name="ToolbarTextView">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="fontFamily">@font/source_sans_pro_light</item>
    </style>

</resources>